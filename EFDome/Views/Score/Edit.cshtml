@model EFDome.Models.score
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <div> 
        <form method="post" action="@Url.Action("Save","Score")">
            <span>成绩编号:</span>
            <input type="text" name="Id" readonly="readonly" value="@Model.Id" />
