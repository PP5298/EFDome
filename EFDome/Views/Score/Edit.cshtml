            <input type="text" name="CourseId" readonly="readonly" value="@Model.CourseId" />
            <span>成绩</span>
            <input type="text" name="Value" value="@Model.Value" />
            <input type="submit" value="提交" /><a href="@Url.Action("score","home")">返回</a>
        </form>
    </div>
</body>
</html>
